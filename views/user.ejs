<!DOCTYPE html>
<html lang="en">

<head>
    <title>User | Plastico</title>
    <%- include('partials/head.ejs') %>
</head>

<body class="sb-nav-fixed">
    <%- include('partials/header.ejs') %>

        <div id="layoutSidenav">
            <%- include('partials/sidenav.ejs') %>

                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid">
                            <h1 class="mt-4">User Information</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                                <li class="breadcrumb-item active">User</li>
                            </ol>

                            <!-- Table User -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>List of Users</h4>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataUser" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Full Name</th>
                                                    <th>Username</th>
                                                    <th>Email</th>
                                                    <th>Current Point</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- User Activity Chart  -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>User Activity</h4>
                                </div>
                                <center>
                                    <div class="form-group">
                                        <label id="year" for="selYear">Select Year :</label>
                                        <select class="form-control" id="selYear" style="width: 100px;">
                                  <option value="2020">2020</option>
                                  <option value="2021">2021</option>
                                  <option value="2022">2022</option>
                                </select>
                                    </div>
                                </center>
                                <div class="card-body"><canvas id="lineChart" width="100%" height="40"></canvas></div>
                            </div>
                        </div>
                    </main>
                    <footer class="py-4 bg-light mt-auto">
                        <%- include('partials/footer.ejs') %>
                    </footer>
                </div>
        </div>
        <%- include('partials/script.ejs') %>
</body>

<script src="js/user.js"></script>