<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bin Detail | Plastico</title>
    <%- include('partials/head.ejs') %>
</head>

<body class="sb-nav-fixed">
    <%- include('partials/header.ejs') %>
        <div id="layoutSidenav">
            <%- include('partials/sidenav.ejs') %>

                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid">
                            <h1 class="mt-4">Bin Detail</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="bin">Bin</a></li>
                                <li class="breadcrumb-item active">Bin Detail</li>
                            </ol>

                            <!-- Bin Profile  -->
                            <div class="row justify-content-center">
                                <div class="col-xl-7">
                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <h4>Plastico Bin <span name="name" id="name"></span></h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    <b><p>Bin Fullness</p></b>
                                                </div>
                                                <div class="col-lg-8">
                                                    <div class="progress" style="margin-top: 2%; margin-bottom: 2%;">
                                                        <div class="progress-bar" id="capacity"></div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-1">
                                                    <p id="percent"></p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    <b><p>Address</p></b>
                                                </div>
                                                <div class="col-lg-9">
                                                    <span id="address"></span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    <b><p>Last Accessed</p></b>
                                                </div>
                                                <div class="col-lg-9">
                                                    <p id="last_accessed"></p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    <b><p>Status</p></b>
                                                </div>
                                                <div class="col-lg-9">
                                                    <button class="btn btn-secondary" id="activeButton" href="javascript:void(0)">Active</button>
                                                    <button class="btn btn-secondary" id="inactiveButton" href="javascript:void(0)">Inactive</button>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    <b><p>QR Code</p></b>
                                                </div>
                                                <div class="col-lg-9">
                                                    <canvas id="qrCode"></canvas>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Bin Usage Graph -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>Bin Usage Chart</h4>
                                    <p>Here is the graph of bin's monthly usage.</p>
                                </div>
                                <div class="card-body">
                                    <div class="row justify-content-center">
                                        <div class="form-group" style="margin-right: 5%;">
                                            <label id="year" for="selYear">Select Year :</label>
                                            <select class="form-control" id="selYear" style="width: 100px;">
                                          <option value="2020">2020</option>
                                          <option value="2021">2021</option>
                                          <option value="2022">2022</option>
                                        </select>
                                        </div>
                                        <div class="form-group">
                                            <label id="month" for="selMonth">Select Month :</label>
                                            <select class="form-control" id="selYear" style="width: 100px;">
                                            <option value="1">January</option>
                                            <option value="2">February</option>
                                            <option value="3">March</option>
                                            <option value="4">April</option>
                                            <option value="5">May</option>
                                            <option value="6">June</option>
                                            <option value="7">July</option>
                                            <option value="8">August</option>
                                            <option value="9">September</option>
                                            <option value="10">October</option>
                                            <option value="11">November</option>
                                            <option value="12">December</option>
                                        </select>
                                        </div>
                                    </div>
                                    <div class="chart">
                                        <div class="chartjs-size-monitor">
                                            <div class="chartjs-size-monitor-expand">
                                                <div class=""></div>
                                            </div>
                                            <div class="chartjs-size-monitor-shrink">
                                                <div class=""></div>
                                            </div>
                                        </div>
                                        <canvas id="lineChart" width="1196" height="597" class="chartjs-render-monitor" style="display: block; height: 478px; width: 957px;"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                    <footer class="py-4 bg-light mt-auto">
                        <%- include('partials/footer.ejs') %>
                    </footer>
                </div>
        </div>
        <%- include('partials/script.ejs') %>
</body>

<script src="js/bin-profile.js"></script>
<script src="js/qrcode.min.js"></script>