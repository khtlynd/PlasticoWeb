<!DOCTYPE html>
<html lang="en">

<head>
    <title>User | Plastico</title>
    <%- include('partials/head.ejs') %>
</head>

<body class="sb-nav-fixed">
    <%- include('partials/header.ejs') %>
        <div id="layoutSidenav">
            <%- include('partials/sidenav.ejs') %>

                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid">
                            <h1 class="mt-4">User Profile</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="user">User</a></li>
                                <li class="breadcrumb-item active">User Profile</li>
                            </ol>

                            <!-- User Profile  -->
                            <div class="row justify-content-center">
                                <div class="col-xl-6">
                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <h4>User Detail <span name="name" id="name"></span></h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    <b><p>Full Name</p></b>
                                                </div>
                                                <div class="col-lg-6">
                                                    <span id="fname"></span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    <b><p>Username</p></b>
                                                </div>
                                                <div class="col-lg-6">
                                                    <span id="uname"></span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    <b><p>Email Address</p></b>
                                                </div>
                                                <div class="col-lg-6">
                                                    <p id="email"></p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    <b><p>Current Point</p></b>
                                                </div>
                                                <div class="col-lg-6">
                                                    <p id="point"></p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    <b><p>Last Activity</p></b>
                                                </div>
                                                <div class="col-lg-6">
                                                    <p id="lastactivity">-</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <p>*Admin can deactivate user account if there is a violation towards Plastico Terms & Conditions</p>
                                            <center>
                                                <button class="btn btn-danger" id="deactButton" href="javascript:void(0)" style="display: none;">Deactivate Account</button>
                                                <button class="btn btn-success" id="reactButton" href="javascript:void(0)" style="display: none;">Activate Account</button>
                                            </center>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- User History -->
                            <h4>Point Transaction History</h4>
                            <div class="row">
                                <div class="col-xl-6">
                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <h5>Goals</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table class="table table-bordered" id="gHistory" width="100%" cellspacing="0">
                                                    <thead>
                                                        <tr>
                                                            <th>Goals Name</th>
                                                            <th>Point Earned</th>
                                                        </tr>
                                                    </thead>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <h5>Rewards</h5>
                                            <!-- <p id="counting"></p> -->
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table class="table table-bordered" id="rHistory" width="100%" cellspacing="0">
                                                    <thead>
                                                        <tr>
                                                            <th>Rewards Name</th>
                                                            <th>Point Used</th>
                                                        </tr>
                                                    </thead>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- User Activity Graph -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>User Chart</h4>
                                    <p>Here is the graph of bin's monthly usage.</p>
                                </div>
                                <div class="card-body">
                                    <div class="row justify-content-center">
                                        <div class="form-group" style="margin-right: 5%;">
                                            <label id="year" for="selYear">Select Year :</label>
                                            <select class="form-control" id="selYear" style="width: 100px;">
                                  <option value="2020">2020</option>
                                  <option value="2021">2021</option>
                                  <option value="2022">2022</option>
                                </select>
                                        </div>
                                        <div class="form-group">
                                            <label id="month" for="selMonth">Select Month :</label>
                                            <select class="form-control" id="selYear" style="width: 100px;">
                                    <option value="1">January</option>
                                    <option value="2">February</option>
                                    <option value="3">March</option>
                                    <option value="4">April</option>
                                    <option value="5">May</option>
                                    <option value="6">June</option>
                                    <option value="7">July</option>
                                    <option value="8">August</option>
                                    <option value="9">September</option>
                                    <option value="10">October</option>
                                    <option value="11">November</option>
                                    <option value="12">December</option>
                                </select>
                                        </div>
                                    </div>
                                    <div class="chart">
                                        <div class="chartjs-size-monitor">
                                            <div class="chartjs-size-monitor-expand">
                                                <div class=""></div>
                                            </div>
                                            <div class="chartjs-size-monitor-shrink">
                                                <div class=""></div>
                                            </div>
                                        </div>
                                        <canvas id="lineChart" width="1196" height="597" class="chartjs-render-monitor" style="display: block; height: 478px; width: 957px;"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                    <footer class="py-4 bg-light mt-auto">
                        <%- include('partials/footer.ejs') %>
                    </footer>
                </div>
        </div>
        <%- include('partials/script.ejs') %>
</body>

<script src="js/user_profile.js"></script>