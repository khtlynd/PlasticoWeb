<!DOCTYPE html>
<html lang="en">

<head>
    <title>Goals | Plastico</title>
    <%- include('partials/head.ejs') %>
</head>

<body class="sb-nav-fixed">
    <%- include('partials/header.ejs') %>

        <div id="layoutSidenav">
            <%- include('partials/sidenav.ejs') %>

                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid">
                            <h1 class="mt-4">User Goals</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                                <li class="breadcrumb-item active">Goals</li>
                            </ol>

                            <!-- Table Article -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>List of Goals</h4>
                                </div>
                                <div class="card-body">
                                    <a class="btn btn-primary text-white" style="margin-bottom: 1%" data-toggle="modal" data-target="#addGoals">Add New Goals</a>
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataGoals" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Goals Name</th>
                                                    <th>Expire Period</th>
                                                    <th>Target</th>
                                                    <th>Extra Point</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Add Goals Modal  -->
                        <div class="modal fade" id="addGoals">
                            <div class="modal-dialog modal-lg modal-dialog-centered">
                                <div class="modal-content">

                                    <!-- Modal Header -->
                                    <div class="modal-header">
                                        <h4 class="modal-title">Add New Goals</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>

                                    <!-- Modal body -->
                                    <div class="modal-body">
                                        <form action="javascript:void(0)">
                                            <div class="form-group">
                                                <label class="small mb-1" for="goals-name">Goals Name</label>
                                                <input class="form-control py-4" id="gname" type="text" placeholder="Enter goals name" required/>
                                            </div>
                                            <div class="form-group">
                                                <label class="small mb-1" for="content">Description</label>
                                                <textarea class="form-control py-4" id="content" rows="5" name="content" form="content" placeholder="Enter description" required> </textarea>
                                            </div>
                                            <div class="form-group">
                                                <label class="small mb-1" for="expired">Expired Period (in Days)</label>
                                                <input class="form-control py-4" id="exp-period" type="number" placeholder="Enter expired period in days" required/>
                                            </div>
                                            <div class="form-group">
                                                <label class="small mb-1" for="target">Target</label>
                                                <input class="form-control py-4" id="target" type="number" placeholder="Enter target to accomplish goals" required/>
                                            </div>
                                            <div class="form-group">
                                                <label class="small mb-1" for="xpoint">Extra Point</label>
                                                <input class="form-control py-4" id="xpoint" type="number" placeholder="Enter extra point once goalas are accomplished" required/>
                                            </div>
                                        </form>
                                    </div>

                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" id="gSubmit">Save</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </main>
                    <footer class="py-4 bg-light mt-auto">
                        <%- include('partials/footer.ejs') %>
                    </footer>
                </div>
        </div>
        <%- include('partials/script.ejs') %>
</body>

<script src="js/goals.js"></script>
<script src="js/add-goals.js"></script>