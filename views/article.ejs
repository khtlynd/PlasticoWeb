<head>
    <title>Article | Plastico</title>
    <%- include('partials/head.ejs') %>
</head>

<body class="sb-nav-fixed">
    <%- include('partials/header.ejs') %>

        <div id="layoutSidenav">
            <%- include('partials/sidenav.ejs') %>

                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid">
                            <h1 class="mt-4">User Article</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                                <li class="breadcrumb-item active">Article</li>
                            </ol>

                            <!-- Table Article -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>List of Articles</h4>
                                </div>
                                <div class="card-body">
                                    <a class="btn btn-primary text-white" style="margin-bottom: 1%" data-toggle="modal" data-target="#addArticle">Add New Article</a>
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataArticle" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Title</th>
                                                    <th>Author</th>
                                                    <!-- <th><i class="fas fa-thumbs-up"></i></th>
                                                    <th><i class="fas fa-thumbs-down"></th> -->
                                                    <th>Published Date</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Add Article Modal  -->
                        <div class="modal fade" id="addArticle">
                            <div class="modal-dialog modal-lg modal-dialog-centered">
                                <div class="modal-content">

                                    <!-- Modal Header -->
                                    <div class="modal-header">
                                        <h4 class="modal-title">Add New Article</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>

                                    <!-- Modal body -->
                                    <div class="modal-body">
                                        <form action="javascript:void(0)">
                                            <div class="form-group">
                                                <label class="small mb-1" for="title">Title</label>
                                                <input class="form-control py-4" id="title" type="text" placeholder="Enter article title" required/>
                                            </div>
                                            <div class="form-group">
                                                <label class="small mb-1" for="author">Author</label>
                                                <input class="form-control py-4" id="author" type="text" placeholder="Enter author's name" required/>
                                            </div>
                                            <div class="form-group">
                                                <label class="small mb-1" for="date">Published Date</label>
                                                <input class="form-control py-4" id="datepicker" type="date" placeholder="YYYY/MM/DD" required/>
                                            </div>
                                            <div class="form-group">
                                                <label class="small mb-1" for="content">Content</label>
                                                <textarea class="form-control py-4" id="content" placeholder="Enter article content" rows="10" cols="50" aria-required></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label class="small mb-1" for="image">Image URL</label>
                                                <input class="form-control py-4" id="image" type="url" placeholder="Enter image URL" required/>
                                            </div>
                                        </form>
                                    </div>

                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" id="Publish">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                    <footer class="py-4 bg-light mt-auto">
                        <%- include('partials/footer.ejs') %>
                    </footer>
                </div>
        </div>
        <%- include('partials/script.ejs') %>
</body>

<script type="text/javascript" src="js/notify.js"></script>
<script src="js/article.js"></script>
<script src="js/publish_article.js"></script>